        <span class="c-header-main_user_name">{{# _t }}Welcome{{/ _t }}</span>
        <span class="c-header-main_user_icon">
            <span class="c-header-main_user_icon_dot"></span>
            <span class="c-header-main_user_icon_dot"></span>
            <span class="c-header-main_user_icon_dot"></span>
        </span>
    </button>
    {{/showTopHeaderMenu}}

    {{^showTopHeaderMenu}}
    {{#isAuthenticated}}
    <button type="button" class="c-header-main_user btn btn-danger" id="btn-logout">{{#_t}}Log Out{{/_t}}</button>
    {{/isAuthenticated}}
    {{/showTopHeaderMenu}}
</header>

