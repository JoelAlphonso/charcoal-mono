{{!--
Switch Property Input
=======================

`charcoal/admin/property/input/switch`

--}}
<div>
<input
    id="switch_{{input_id}}"
    type="checkbox"
    class="form-control {{input_class}}"
    data-target="{{input_id}}"
    {{#checked}}checked{{/checked}}
    {{#read_only}}read_only{{/read_only}}
    {{#required}}required{{/required}}
    {{#disabled}}disabled{{/disabled}}
>
<input type="hidden"
    id="{{input_id}}"
    name="{{input_name}}"
    value="{{value}}"
>
</div>

{{#add_js}}
<script>
Charcoal.Admin.manager().add_property_input({
    id: '{{input_id}}',
    type: 'charcoal/admin/property/input/switch',
    data: {
        input_selector : '#{{input_id}}',
        switch_selector : '#switch_{{input_id}}'
    }
});
</script>
{{/add_js}}
