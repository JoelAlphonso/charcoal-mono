{{# active }}
    {{# hasActions }}
        {{> charcoal/admin/widget/actions/dropdown }}
    {{/ hasActions }}
    {{^ hasActions }}
        {{# isButton }}
            <button
                class="{{ cssClasses }}"
                type="{{ buttonType }}"
                {{# widgetType }}
                data-widget-type="{{ . }}"
                {{/ widgetType }}
            >{{> charcoal/admin/widget/actions/label }}</button>
        {{/ isButton }}
        {{^ isButton }}
            <a class="{{ cssClasses }}"
               href="{{ url }}"
                {{# target }}
                target="{{ . }}"
                {{/ target }}
                {{# widgetType }}
               data-widget-type="{{ . }}"
                {{/ widgetType }}
            >{{> charcoal/admin/widget/actions/label }}</a>
        {{/ isButton }}
    {{/ hasActions }}
{{/ active }}
