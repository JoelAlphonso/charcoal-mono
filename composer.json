{
  "name": "locomotivemtl/charcoal-core",
  "description": "Charcoal Web Framework",
  "keywords": [ "charcoal", "locomotive", "php", "framework", "cms" ],
  "homepage": "https://charcoal.locomotive.ca",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/locomotivemtl/charcoal-core/issues",
    "source": "https://github.com/locomotivemtl/charcoal-core"
  },
  "authors": [
    {
      "name": "Mathieu Ducharme",
      "email": "mat@locomotive.ca"
    },
    {
      "name": "Locomotive",
      "homepage": "https://locomotive.ca"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.5.0",
    "ext-pdo": "*",
    "ext-mbstring": "*",
    "psr/log": "^1.0",
    "locomotivemtl/charcoal-app": "dev-master",
    "locomotivemtl/charcoal-config": "~0.5",
    "locomotivemtl/charcoal-property": "dev-master",
    "locomotivemtl/charcoal-factory": "~0.3",
    "locomotivemtl/charcoal-view": "~0.1",
    "locomotivemtl/charcoal-translation": "dev-master"
  },
  "require-dev": {
    "monolog/monolog": "^1.13",
    "mustache/mustache": "^2.9.0",
    "phpunit/phpunit": "^4.8",
    "slim/slim": "^3.0",
    "squizlabs/php_codesniffer": "^2.4"
  },
  "autoload": {
    "psr-4": {
      "Charcoal\\": "src/Charcoal"
    }
  },
  "scripts": {
    "test": [
      "@phplint",
      "@phpcs",
      "@phpunit"
    ],
    "phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
    "phpunit": "php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text",
    "phpcs": "php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/",
    "phpcbf": "php vendor/bin/phpcbf -ps --colors --standard=phpcs.xml src/ tests/"
  }
}

