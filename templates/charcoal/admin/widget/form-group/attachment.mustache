    {{# showHeader }}
    <header class="o-header -border">
        {{# showTitle }}
        <h2>{{ title }}</h2>
        {{/ showTitle }}

        {{> charcoal/admin/template/inc.description }}
    </header>
    {{/ showHeader }}

    {{!-- Include the attachment widget }}
    {{> charcoal/admin/widget/attachment }}

    {{> charcoal/admin/template/inc.notes }}

</fieldset>
