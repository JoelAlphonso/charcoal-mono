{{!--
    Form Group \ Structure Property
    ===============================

    `charcoal/admin/widget/form-group/structure-form-group`
--}}

<fieldset class="c-structure-property{{^ displays.seamless }} -bordered{{/ displays.seamless }}">
    {{# showHeader }}
        <header class="o-header -border">
            {{# showTitle }}
                <h2>{{ title }}</h2>
            {{/ showTitle }}
            {{> charcoal/admin/template/inc.description }}
                {{# showNotesAbove }}
            {{> charcoal/admin/template/inc.notes }}
            {{/ showNotesAbove }}
        </header>
    {{/ showHeader }}
    {{^ showHeader }}
        <h2 class="sr-only">{{ title }}</h2>
        {{# showDescription }}
            <div class="form-text text-muted o-section">{{& description }}</div>
        {{/ showDescription }}
        {{# showNotesAbove }}
            {{> charcoal/admin/template/inc.notes }}
        {{/ showNotesAbove }}
    {{/ showHeader }}
    <div class="c-structure-property_entries">
        {{^ hasFormProperties }}
            {{# showEmpty }}
                <div class="c-structure-property_empty alert alert-warning" role="alert">{{# _t }}No Template Options.{{/ _t }}</div>
            {{/ showEmpty }}
        {{/ hasFormProperties }}
        <section class="c-structure-property_entry" id="structure-entry-{{ structId }}">
            <div class="c-structure-property_entry_content">
                {{> charcoal/admin/widget/form-group/form-properties }}
            </div>
        </section>
    </div>
    {{^ showNotesAbove }}
        {{> charcoal/admin/template/inc.notes }}
    {{/ showNotesAbove }}
</fieldset>
