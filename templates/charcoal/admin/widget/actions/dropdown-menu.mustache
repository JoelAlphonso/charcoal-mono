{{!--
    Admin \ UI \ Dropdown Menu
    ==========================

    @used-by `charcoal/admin/widget/actions/dropdown`
--}}
{{# active }}
{{# isSeparator }}
<li role="separator" class="divider"></li>
{{/ isSeparator }}
{{^ isSeparator }}
    {{# isHeader }}
    <li class="dropdown-header">{{& label }}</li>
    {{/ isHeader }}
    {{# hasActions }}
    <li class="dropdown-submenu dropdown-menu-item">
        {{> charcoal/admin/widget/actions/dropdown-submenu }}
    </li>
    {{/ hasActions }}
    {{^ hasActions }}
    <li class="dropdown-menu-item">
        {{# isButton }}
        <button class="btn{{# ident }} {{ jsActionPrefix }}-{{ . }}{{/ ident }}"
                type="{{ buttonType }}"
                {{# name }}
                name="{{ . }}"
                {{/ name }}
                {{# value }}
                value="{{ . }}"
                {{/ value }}
                {{# widgetType }}
                data-widget-type="{{ . }}"
                {{/ widgetType }}
                {{# dataAttributes }}
                data-{{ key }}="{{ value }}"
                {{/ dataAttributes }}
                >{{> charcoal/admin/widget/actions/label }}</button>
        {{/ isButton }}
        {{# isLink }}
        <a{{# ident }} class="{{ jsActionPrefix }}-{{ . }}"{{/ ident }}
           href="{{ url }}"
           {{# target }}
           target="{{ . }}"
           {{/ target }}
           {{# widgetType }}
           data-widget-type="{{ . }}"
           {{/ widgetType }}
           {{# dataAttributes }}
           data-{{ key }}="{{ value }}"
           {{/ dataAttributes }}
           >{{> charcoal/admin/widget/actions/label }}</a>
        {{/ isLink }}
        {{# isText }}
        {{> charcoal/admin/widget/actions/label }}
        {{/ isText }}
    </li>
    {{/ hasActions }}
{{/ isSeparator }}
{{/ active }}
