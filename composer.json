{
  "name": "beneroch/charcoal-attachment",
  "description": "Charcoal Attachments Module",
  "homepage": "https://charcoal.locomotive.ca",
  "license": "MIT",
  "support": {
    "issues": "https://bitbucket.org/beneroch/charcoal-attachment/issues",
    "source": "https://bitbucket.org/beneroch/charcoal-attachment"
  },
  "authors": [
    {
      "name": "Bene Roch",
      "email": "ben@locomotive.ca"
    },
    {
      "name": "Locomotive",
      "homepage": "https://locomotive.ca"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "locomotivemtl/charcoal-core": "dev-master",
    "locomotivemtl/charcoal-base": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.4",
    "satooshi/php-coveralls":"~1.0"
  },
  "autoload": {
    "psr-4": {
      "Charcoal\\": "src/Charcoal",
      "Charcoal\\Attachment\\": "src/Charcoal/Attachment"
    }
  },
  "scripts": {
    "test": [
      "@phplint",
      "@phpunit",
      "@phpcs"
    ],
    "phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
    "phpunit": "php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text",
    "phpcs": "php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/",
    "phpcbf": "php vendor/bin/phpcbf -ps --colors --standard=phpcs.xml src/ tests/"
  }
}
