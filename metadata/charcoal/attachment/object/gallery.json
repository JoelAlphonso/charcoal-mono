                    "images": {
                        "title": "Images",
                        "type": "charcoal/admin/widget/attachment",
                        "form_ident": "default",
                        "group": "inception-gallery",
                        "attachable_objects": {
                            "charcoal/attachment/object/image": {
                                "label": "Image"
                            }
                        }
                    }
                }
            },
            "table": {
                "title": {
                    "fr": "Liste des galeries",
                    "en": "List of Galleries"
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default",
                        "obj_type": "charcoal/attachment/object/gallery"
                    }
                }
            }
        }
