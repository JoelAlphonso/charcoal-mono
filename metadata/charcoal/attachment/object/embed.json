{
    "data": {
        "type": "charcoal/attachment/object/embed",
        "preview": "{{> charcoal/attachment/object/embed }}"
    },

    "properties": {
        "file": {
            "type": "image",
            "upload_path": "uploads/attachments/images/",
            "view_options": {
                "charcoal/admin/property/display/image": {
                    "height": 50
                }
            }
        },
        "description": {
            "type": "html"
        }
    },

    "admin": {
        "forms": {
            "embed": {
                "l10n_mode": "loop_inputs",
                "groups": {
                    "info": {
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        },
                        "title": {
                            "fr": "Informations",
                            "en": "Informations"
                        },
                        "properties": [
                            "title",
                            "subtitle",
                            "embed",
                            "description",
                            "keywords"
                        ]
                    },
                    "taxo": {
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] }
                            ]
                        },
                        "properties": [
                            "active"
                        ]
                    }
                },
                "sidebars": {
                    "actions": {}
                }
            },
            "quick": {
                "groups": {
                    "main": {
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        },
                        "properties": [
                            "title",
                            "embed"
                        ]
                    }
                }
            }
        },
        "default_form": "embed",
        "lists": {
            "default": {
                "properties": [
                    "title",
                    "file",
                    "active"
                ],
                "list_actions": [{
                    "label": {
                        "en": "Nouveau média externe",
                        "fr": "New embedded content"
                    },
                    "ident": "create",
                    "url": "object/edit?obj_type=charcoal/attachment/object/embed"
                }],
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/embed"
                    }
                }
            },
            "attachment": {
                "properties": [
                    "title",
                    "embed"
                ],
                "orders": {
                    "type": {
                        "property": "type",
                        "val": "asc"
                    }
                },
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/embed"
                    }
                }
            }
        },
        "default_list": "default",
        "dashboards": {
            "edit": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "embed",
                        "obj_type": "charcoal/attachment/object/embed"
                    }
                }
            },
            "table": {
                "title": {
                    "fr": "Liste des média externe",
                    "en": "Embedded Content List"
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default",
                        "obj_type": "charcoal/attachment/object/embed"
                    }
                }
            }
        }
    }
}
