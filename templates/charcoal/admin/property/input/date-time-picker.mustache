{{!--
DateTime picker Property Input
=======================

`charcoal/admin/property/input/datetimepicker`

--}}

{{#input}}
<div class="input-group date" id="datetimepicker_{{inputId}}">
    <input
        type="text"
        id="{{inputId}}"
        name="{{inputName}}"
        class="form-control {{inputClass}}"
        {{#placeholder}}placeholer="{{placeholder}}"{{/placeholder}}
        {{#readOnly}}read_only{{/readOnly}}
        {{#required}}required{{/required}}
        {{#disabled}}disabled{{/disabled}}
        value="{{p.displayVal}}"
    >
    <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
    </span>
</div>
{{/input}}

{{#addJs}}
<script>
Charcoal.Admin.manager().add_property_input({
    id: '{{inputId}}',
    type: 'charcoal/admin/property/input/DateTimePicker',
    data: {
        datetimepicker_selector : '#datetimepicker_{{inputId}}',
        datetimepicker_options: {
            // moment.js formatting
            format: 'YYYY-MM-DD HH:mm:ss',
            defaultDate: '{{p.displayVal}}'
        }
    }
});
</script>
{{/addJs}}
