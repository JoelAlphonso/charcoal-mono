<div class="btn-group" role="group">
    {{# attachmentOptions.read_only }}
        {{# attachmentOptions.show_icon }}
        {{# attachmentType }}
        <button type="button" class="btn btn-default" disabled>
            <span class="{{ faIcon }}"></span>
        </button>
        {{/ attachmentType }}
        {{/ attachmentOptions.show_icon }}
    {{/ attachmentOptions.read_only }}
    {{^ attachmentOptions.read_only }}
    <button type="button" class="btn {{# active }}btn-primary{{/ active }}{{^ active }}btn-danger{{/ active }} dropdown-toggle" data-toggle="dropdown">
        {{# attachmentOptions.show_header }}
        <span class="btn-label">{{# _t }}Actions{{/ _t }}</span>
        {{/ attachmentOptions.show_header }}
        {{^ attachmentOptions.show_header }}
            {{# attachmentOptions.show_icon }}
            {{# attachmentType }}
            <span class="{{ faIcon }}">&nbsp;</span>
            {{/ attachmentType }}
            {{/ attachmentOptions.show_icon }}
        <span class="sr-only">{{# _t }}Actions{{/ _t }}</span>
        {{/ attachmentOptions.show_header }}
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        {{!--
        <li><a href="#" data-image="[[src]]" data-type="[[type]]" data-microtype="[[microType]]" data-action="preview">Preview</a></li>
        --}}
        <li><a href="object/edit?obj_type={{ type }}&obj_id={{ id }}" data-type="{{ type }}" data-title="{{# _t }}Edit{{/ _t }}" data-id="{{id}}" data-action="edit">{{# _t }}Edit{{/ _t }}</a></li>
        {{# isAttachmentContainer }}
        <li role="separator" class="divider"></li>
        {{# attachmentTypes }}
        <li><a href="#" data-type="{{ type }}"{{# attachmentGroup }} data-group="{{ . }}"{{/ attachmentGroup }} data-id="{{ id }}" data-title="{{ label }}" data-attachment="{{ attachmentType }}" data-action="add-object">
            {{# attachmentOptions.show_icon }}
                {{# attachmentType }}
                    <span class="{{ faIcon }}">&nbsp;</span>
                {{/ attachmentType }}
            {{/ attachmentOptions.show_icon }}
            {{ label }}
        </a></li>
        {{/ attachmentTypes }}
        <li role="separator" class="divider"></li>
        {{/ isAttachmentContainer }}
        <li><a href="object/delete?obj_type={{ type }}&obj_id={{ id }}" data-type="{{ type }}" data-id="{{ id }}" data-action="delete">{{# _t }}Remove{{/ _t }}</a></li>
        {{# isAttachmentContainer }}
        <li><a href="object/edit?obj_type={{ type }}&obj_id={{ id }}" target="_blank">{{# _t }}Edit Content{{/ _t }}</a></li>
        {{/ isAttachmentContainer }}
    </ul>
    {{/ attachmentOptions.read_only }}
</div>
