{{!--
    Radio \ Checkbox
    ================

    `charcoal/admin/property/input/checkbox`
    `charcoal/admin/property/input/checkbox-color`
    `charcoal/admin/property/input/radio`
    `charcoal/admin/property/input/radio-color`
--}}
<input
    class="form-check-input{{# inputClass }} {{ . }}{{/ inputClass }}"
    type="{{ type }}"
    id="{{ inputId }}"
    name="{{ inputName }}"
    autocomplete="off"
    {{# checked }}checked{{/ checked }}
    {{# readOnly }}readonly{{/ readOnly }}
    {{# required }}required{{/ required }}
    {{# disabled }}disabled{{/ disabled }}
    value="{{ value }}"
>
