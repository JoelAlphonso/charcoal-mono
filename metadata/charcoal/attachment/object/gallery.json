{
    "data": {
        "type": "charcoal/attachment/object/gallery",
        "preview": "{{> charcoal/attachment/object/gallery }}",
        "heading": {
            "fr": "Galerie{{# title }}: {{ . }}{{/ title }}{{^ title }} #{{ id }}{{/ title }}",
            "en": "Gallery{{# title }}: {{ . }}{{/ title }}{{^ title }} #{{ id }}{{/ title }}"
        }
    },

    "attachments": {
        "attachable_objects": {
            "charcoal/attachment/object/image": {
                "label": "Image"
            }
        }
    },

    "admin": {
