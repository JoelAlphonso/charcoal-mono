{
    "labels": {
        "name": {
            "fr": "Événements",
            "en": "Event"
        },
        "singular_name": {
            "fr": "Événement",
            "en": "Event"
        },
        "edit_item": {
            "fr": "Modifier l'événement",
            "en": "Edit event"
        },
        "all_items": {
            "fr": "Tous les événements",
            "en": "All Events"
        },
        "menu_items": {
            "fr": "Événements",
            "en": "Events"
        }
    },

    "admin": {
        "lists": {
            "cms.default": {
                "properties": [
                    "category",
                    "title",
                    "start_date",
                    "end_date",
                    "publish_date"
                ],
                "list_actions": [
                    {
                        "ident": "create",
                        "priority": 10,
                        "label": {
                            "en": "New event",
                            "fr": "Nouvel événement"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}"
                    }
                ],
                "object_actions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "split_button": true,
                        "actions": {
                            "goto": {
                                "label": {
                                    "en": "Go to event",
                                    "fr": "Voir l'événement"
                                },
                                "url": "{{baseUrl}}{{url}}",
                                "target": "_blank",
                                "priority": 2
                            },
                            "clone": {
                                "label": {
                                    "en": "Clone",
                                    "fr": "Cloner"
                                },
                                "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&clone_id={{id}}",
                                "priority": 3
                            },
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 4
                            }
                        }
                    }
                },
                "orders": [
                    {
                        "property": "start_date",
                        "mode": "desc"
                    }
                ]
            }
        },

        "forms": {
            "cms.default": {
                "groups": {
                    "cms.info": {},
                    "cms.meta": {},
                    "cms.advanced": {},
                    "cms.tickets": {},
                    "cms.revisions": {}
                },
                "sidebars": {
                    "default": {
                        "properties": [
                            "created",
                            "created_by",
                            "last_modified",
                            "last_modified_by"
                        ]
                    }
                }
            }
        },

        "form_groups": {
            "cms.info": {
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1, 1]}
                    ]
                },
                "title": "Info",
                "icon": "info",
                "properties": [
                    "title",
                    "summary",
                    "content",
                    "image",
                    "info_url",
                    "info_phone"
                ]
            },
            "cms.gallery": {
                "title": {
                    "fr": "Galerie d'images",
                    "en": "Gallery"
                },
                "icon": "photo",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "image-gallery",
                "attachable_objects": {
                    "charcoal/attachment/object/image": {
                        "label": {
                            "fr": "Image",
                            "en": "Image"
                        }
                    }
                }
            },
            "cms.resources": {
                "title": {
                    "en": "Documents",
                    "fr": "Ressources"
                },
                "icon": "paperclip",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "document",
                "attachable_objects": {
                    "charcoal/attachment/object/file": {
                        "label": {
                            "fr": "Document",
                            "en": "Document"
                        }
                    },
                    "charcoal/attachment/object/link": {
                        "label": {
                            "fr": "Lien",
                            "en": "Link"
                        }
                    }
                }
            },
            "cms.meta": {
                "icon": "tags",
                "title": {
                    "fr": "Description méta",
                    "en": "Meta tags"
                },
                "properties": [
                    "meta_title",
                    "meta_description",
                    "meta_image",
                    "keywords"
                ]
            },
            "cms.advanced": {
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1, 1]},
                        {"columns": [1, 1]},
                        {"columns": [1]},
                        {"columns": [1]}
                    ]
                },
                "title": "Options",
                "icon": "cog",
                "properties": [
                    "category",
                    "start_date",
                    "end_date",
                    "publish_date",
                    "expiry_date",
                    "slug",
                    "active"
                ],
                "priority": 600
            },
            "cms.revisions": {
                "title": {
                    "fr": "Révisions",
                    "en": "Revisions"
                },
                "icon": "floppy-o",
                "template": "charcoal/admin/widget/form-group/object-revisions",
                "type": "charcoal/admin/widget/form-group/object-revisions"
            },
            "cms.tickets": {
                "layout": {
                    "structure": [
                        {"columns": [1, 1]},
                        {"columns": [1]},
                        {"columns": [1, 1]}
                    ]
                },
                "title": {
                    "fr": "Billets",
                    "en": "Tickets"
                },
                "icon": "credit-card",
                "properties": [
                    "ticket_price_min",
                    "ticket_price_max",
                    "ticket_summary",
                    "ticket_url",
                    "ticket_phone"
                ]
            }
        },
        "dashboards": {
            "cms.edit": {
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/object-form",
                        "form_ident": "cms.default",
                        "group_display_mode": "tab"
                    }
                }
            },
            "cms.table": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "cms.default",
                        "data_sources": ["request"]
                    }
                }
            }
        },
        "default_create_dashboard": "cms.edit",
        "default_edit_dashboard": "cms.edit",
        "default_collection_dashboard": "cms.table"
    }
}
