{
    "name": "locomotivemtl/charcoal-attachment",
    "description": "Charcoal Attachments Module",
    "homepage": "https://charcoal.locomotive.ca",
    "license": "MIT",
    "authors": [
        {
            "name": "Bene Roch",
            "email": "ben@locomotive.ca"
        },
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.7.x-dev"
        }
    },
    "require": {
        "locomotivemtl/charcoal-config": "^0.7",
        "locomotivemtl/charcoal-core": "~0.2",
        "locomotivemtl/charcoal-object": "~0.1",
        "locomotivemtl/charcoal-translator": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.4",
        "satooshi/php-coveralls":"~1.0"
    },
    "suggest": {
        "locomotivemtl/charcoal-admin": "To use the attachment widgets, actions, and scripts."
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": "src/Charcoal"
        }
    },
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phplint",
            "@phpcs"
        ],
        "phplint": "find {src} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpunit": "php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text",
        "phpcs": "php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors --standard=phpcs.xml src/"
    }
}
