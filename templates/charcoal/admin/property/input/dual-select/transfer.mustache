{{!--
    Dual Select \ Transfer Between Lists
    ====================================

    @used-by `charcoal/admin/property/input/dual-select`
--}}
<div class="btn-toolbar">
    <div class="btn-group">
        <button type="button" id="{{ inputId }}_undo" class="btn btn-info" title="{{# _t }}Undo the last action{{/ _t }}">{{# _t }}Undo{{/ _t }}</button>
    </div>
    <div class="btn-group">
        <button type="button" id="{{ inputId }}_rightAll" class="btn btn-default" title="{{# _t }}Move all options from left to right{{/ _t }}"><i class="glyphicon -rotatable glyphicon-forward"></i></button>
        <button type="button" id="{{ inputId }}_rightSelected" class="btn btn-default" title="{{# _t }}Move selected options from left to right{{/ _t }}"><i class="glyphicon -rotatable glyphicon-chevron-right"></i></button>
        <button type="button" id="{{ inputId }}_leftSelected" class="btn btn-default" title="{{# _t }}Move selected options from right to left{{/ _t }}"><i class="glyphicon -rotatable glyphicon-chevron-left"></i></button>
        <button type="button" id="{{ inputId }}_leftAll" class="btn btn-default" title="{{# _t }}Move all options from right to left{{/ _t }}"><i class="glyphicon -rotatable glyphicon-backward"></i></button>
    </div>
    <div class="btn-group">
        <button type="button" id="{{ inputId }}_redo" class="btn btn-warning" title="{{# _t }}Redo the last action{{/ _t }}">{{# _t }}Redo{{/ _t }}</button>
    </div>
</div>
