<aside class="c-aside o-flex_aside" id="{{widget_id}}">
    <div class="o-container -top -right">
        <div class="c-panel -fixed">
            <header class="c-panel_header">
                {{title}}
            </header>

            <div class="c-panel_main">
                <p>{{subtitle}}</p>
                <table class="c-panel_table">
                    {{#form_properties}}
                    <tr class="c-panel_table_row">
                        <th class="c-panel_table_header">{{prop.label}}</th>
                        <td class="c-panel_table_data">{{prop.display_val}}</td>
                    </tr>
                    {{/form_properties}}

                </table>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-lg btn-block" value="Save">Sauvegarder</button>
                </div>

                {{#actions}}
                <div class="form-group">
                    <a href="{{base_url}}{{url}}" class="{{^obj_id}}disabled{{/obj_id}} btn btn-{{btn}} btn-lg btn-block">{{label}}</a>
                </div>
                {{/actions}}
            </div>

            <footer class="c-panel_footer">
                <div class="c-panel_footer_item -red">
                    <a href="#">
                       <i class="fa fa-trash-o"></i> Effacer
                    </a>
                </div>
                <div class="c-panel_footer_item -blue">
                    <span>
                        <i class="fa fa-refresh"></i> RÃ©initialiser
                    </span>
                </div>
            </footer>
        </div>
    </div>
    </aside>

{{#add_js}}
<script>
Charcoal.Admin.manager().add_widget({
    id: '{{widget_id}}',
    type: 'charcoal/admin/widget/form.sidebar',
    data: {
        obj_type: '{{obj_type}}',
        collection_ident: '{{collection_ident}}'
    }
});
</script>
{{/add_js}}
