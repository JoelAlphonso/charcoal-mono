{{!--
    Attachable Preview \ Gallery
    ============================
--}}
{{# hasAttachments }}
    <div class="row">
        {{# attachments }}
            <div class="col-xs-3 col-md-3 js-attachment-actions">
                <a class="card img-thumbnail{{^ active }} bg-danger{{/ active }}"
                   href="object/edit?obj_type={{ obj_type }}&obj_id={{ attachment_id }}"
                   data-type="{{ obj_type }}"
                   data-group="{{ attachmentGroup }}"
                   data-attachment="{{ obj_type }}"
                   data-id="{{ attachment_id }}"
                   data-title="{{# _t }}Edit{{/ _t }}"
                   data-action="edit">
                    {{# src }}
                        <img class="img-fluid" src="{{ . }}"/>
                    {{/ src }}
                </a>
            </div>
        {{/ attachments }}
    </div>
{{/ hasAttachments }}
{{^ hasAttachments }}
    {{> charcoal/admin/widget/attachment/empty }}
{{/ hasAttachments }}
