{{!-- 
Dashboard Widget
================

`charcoal/admin/widget/dashboard`

This widget expects a `Charcoal\Admin\Widget\Dashboard` model as context.

--}}
<div class="dashboard dashboard-{{ident}}">

    {{#widgets}}
        
        {{#dashboard.layout}}
            {{>charcoal/admin/widget/layout.start}}
        {{/dashboard.layout}}

        <div class="widget widget-{{ident}}">
            
            {{#show_label}}
                <span class="title">{{label}}</span>
            {{/show_label}}
            {{#show_actions}}
                <div class="widget-actions">
                {{#actions}}
                    <a href="{{url}}">{{label}}</a>
                {{/actions}}
                </div>
            {{/show_actions}}

            {{!-- 
            Include the widget's partial (template).
            Magic (global) variable $widget_template, set by dashboard's controller 
            --}}
            {{>$widget_template}}
            
        </div>
        
        {{#dashboard.layout}}
           {{>charcoal/admin/widget/layout.end}}
        {{/dashboard.layout}}

    {{/widgets}}

</div>
