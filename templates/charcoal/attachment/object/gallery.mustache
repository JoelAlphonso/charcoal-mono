{{!--
    Attachable Preview \ Gallery
    ============================
--}}
{{# hasAttachments }}
    <ul class="gallery-list row">
        {{# attachments }}
            <li class="col-xs-3 col-md-3 js-attachment-actions">
                <a class="thumbnail" href="#" data-type="{{obj_type}}" data-group="{{attachmentGroup}}"
                   data-attachment="{{obj_type}}" data-title="{{# _t }}Edit{{/ _t }}" data-id="{{ attachment_id }}"
                   data-action="edit">
                    {{# thumbnail }}
                        <img src="{{ baseUrl }}{{ . }}"/>
                    {{/ thumbnail }}
                    {{^ thumbnail }}
                        {{# file }}
                            <img class="thumbnail" src="{{ baseUrl }}{{ . }}"/>
                        {{/ file }}
                    {{/ thumbnail }}
                </a>
            </li>
        {{/ attachments }}
    </ul>
{{/ hasAttachments }}
{{^ hasAttachments }}
    {{> charcoal/admin/widget/attachment/empty }}
{{/ hasAttachments }}
