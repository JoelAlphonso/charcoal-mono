{{!--
    Attachment Widget \ Single Object
    =================================

    @used-by `charcoal/admin/widget/attachment/list`
--}}
<article class="panel panel-default js-attachment"
    id="{{ widgetId }}_{{ id }}"
    data-id="{{ id }}"
    data-type="{{ objType }}"
    data-microtype="{{ microType }}">
    {{# showAttachmentPreview }}
    {{> charcoal/admin/widget/attachment/object/collapsible }}
    {{/ showAttachmentPreview }}
    {{^ showAttachmentPreview }}
    <header draggable="true" id="{{ widgetId }}_heading_{{ id }}" class="panel-heading">
        <h4 class="panel-title">
            <span class="glyphicon {{ glyphicon }}"></span>
            <a href="object/edit?obj_type={{ type }}&obj_id={{ id }}">{{& heading }}</a>
        </h4>
    </header>
    {{/ showAttachmentPreview }}
    <aside class="panel-actions btn-toolbar js-attachment-actions" role="toolbar">
        {{> charcoal/admin/widget/attachment/object/actions }}
    </aside>
</article>
