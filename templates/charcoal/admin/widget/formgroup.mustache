{{!--
Form group (Default) Widget
===========================

`charcoal/admin/widget/form.group`

Display a form group (as a fieldset) and loop the properties to display them.

This widget expects a `Charcoal\Admin\Widget\FormGroup` model as context.

--}}

<fieldset>

    <header class="o-header -border">
        {{#showTitle}}
        <h2>{{title}}</h2>
        {{/showTitle}}
    </header>

{{#formProperties}}

    {{#layout}}

        {{start}}
        {{#cellStartsRow}}

    <section class="o-section">
        <div class="row">

        {{/cellStartsRow}}
    {{/layout}}

            <div class="col-md-{{layout.cellSpanBy12}}">
                 <div class="form-group">
                    <label for="{{prop.inputId}}">{{prop.label}}</label>

                    {{#showDescription}}
                        <span class="c-info" data-toggle="tooltip" data-placement="top" title="{{description}}">?</span>
                    {{/showDescription}}

                    {{#input}}
                        {{!-- PropertyInput --}}
                        {{>$widget_template}}
                    {{/input}}

                    {{#showNotes}}
                        <p class="help-block small">{{notes}}</p>
                    {{/showNotes}}

                </div>
            </div>

    {{#layout}}
        {{#cellEndsRow}}

        </div>
    </section>

        {{/cellEndsRow}}

        {{!-- Hack: Execute end layout --}}
        {{end}}
    {{/layout}}

{{/formProperties}}

</fieldset>

