                    "ident": "create",
                    "url": "object/edit?obj_type=charcoal/attachment/object/gallery"
                }],
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/gallery"
                    }
                }
            },
            "attachment": {
                "properties": [
                    "title"
                ],
                "orders": {
                    "type": {
                        "property": "type",
                        "val": "asc"
                    }
                },
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/gallery"
                    }
                }
            }
        },
        "default_list": "default",
        "forms": {
            "quick": {
                "groups": {
                    "main": {
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        },
                        "title": {
                            "fr": "Galerie",
                            "en": "Gallery"
                        },
                        "properties": [
                            "title"
                        ]
                    }
                }
            }
        },
        "default_form": "quick",
        "dashboards": {
            "edit": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/objectForm",
