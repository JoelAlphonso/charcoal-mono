{{!--
    Table Widget Body
    =================

    @see `charcoal/admin/widget/table`

    This widget expects to be in a context (model) of type `Charcoal\Admin\Widget\Table`.
--}}
<div class="o-section" id="{{ widgetId }}">
    {{# showTableHeader }}
    {{> charcoal/admin/widget/table/header }}
    {{/ showTableHeader }}

    {{# hasObjects }}

    {{!--
    @TODO Implement a better responsive table solution (Tablesaw?)
    <div class="table-responsive">
    --}}
    <div class="c-table-container table-responsive">
        {{!--
        <strong>[[# _t ]]Filters[[/ _t ]]</strong>
        <div class="btn-group">
            <button type="button" class="btn btn-info">[[# _t ]]Latest Objects[[/ _t ]]</button>
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">[[# _t ]]Toggle Dropdown[[/ _t ]]</span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Separated link</a></li>
            </ul>
        </div>
        --}}
        <div class="c-table-pagination">
            {{> charcoal/admin/widget/table/counter }}
        </div>

        <table class="table table-bordered table-hover">
            {{# showTableHead }}
            {{> charcoal/admin/widget/table/thead }}
            {{/ showTableHead }}
            {{> charcoal/admin/widget/table/tbody }}
            {{# showTableFoot }}
            {{> charcoal/admin/widget/table/tfoot }}
            {{/ showTableFoot }}
        </table>

        {{# paginationWidget }}
        {{> charcoal/admin/widget/table/pagination }}
        {{/ paginationWidget }}
    </div>

    {{/ hasObjects }}
    {{^ hasObjects }}
    {{> charcoal/admin/widget/table/empty }}
    {{/ hasObjects }}
</div>

{{> charcoal/admin/widget/table/js }}
