{
	"name": "locomotivemtl/charcoal-email",
	"description": "Email sending and queueing for Charcoal",
	"keywords": [ "charcoal", "email", "queue" ],
	"homepage": "https://charcoal.locomotive.ca",
	"license": "MIT",
	"support": {
		"issues": "https://github.com/locomotivemtl/charcoal-email/issues",
		"source": "https://github.com/locomotivemtl/charcoal-email"
	},
	"authors": [
		{
			"name": "Mathieu Ducharme",
			"email": "mat@locomotive.ca"
		},
		{
			"name": "Locomotive",
			"homepage": "https://locomotive.ca"
		}
	],
	"minimum-stability":"dev",
	"require": {
		"php": ">=5.5.0",
		"phpmailer/phpmailer": "~5.4",
		"locomotivemtl/charcoal-config": "~0.4",
		"locomotivemtl/charcoal-app": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "^4.8",
		"squizlabs/php_codesniffer": "^2.4",
	    "satooshi/php-coveralls":"~1.0.1"
	},
	"autoload": {
		"psr-4": {
			"Charcoal\\": "src/Charcoal"
		}
	},
	"scripts": {
		"test": [
			"find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
			"php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/",
			"php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text"
		],
		"phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
		"phpunit": "php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text",
		"phpcs": "php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/"
	}
}
