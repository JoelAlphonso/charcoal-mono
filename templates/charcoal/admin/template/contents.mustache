    <div class="o-flex_main">
        <div class="o-container">

            <header class="o-header -border">
                <h1>Nouvelle alerte</h1>
            </header>

            <section class="o-section">
                <div class="row">
                    <div class="col-md-6">
                         <div class="form-group">
                            <label for="select1">Type d'alerte</label>
                            <span class="c-info" data-toggle="tooltip" data-placement="top" title="Tooltip on top">?</span>
                            <select class="form-control" id="select1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="select2">Type de gabarit</label>
                            <select class="form-control" id="select2">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                </div>
            </section>

            <section class="o-section">
                <div class="form-group">
                    <label for="select3">Catégorie de l'alerte</label>
                    <select class="form-control" id="select3">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </section>

            <section class="o-section">
                <div class="row">
                    <div class="col-md-8">
                         <div class="form-group">
                            <label for="input1">Titre de l'alerte</label>
                            <input type="text" class="form-control" id="input1">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="date1">Date de l'alerte</label>
                            <input type="text" class="form-control" id="date1">
                        </div>
                    </div>
                </div>
            </section>

            <section class="o-section">
                <label for="wysiwyg">Message de l'alerte</label>
                {{>charcoal/admin/widget/wysiwyg}}
            </section>

            <div class="map-maker">
                <div class="map-maker_actions">
                    <div class="btn-group-vertical" role="group" aria-label="...">
                        <button type="button" class="btn btn-default -active"><svg class="map-maker_icon" role="img" title=""><use xlink:href="{{base_url}}assets/admin/images/svgs.svg#icon-map-marker"></use></svg></button>
                        <button type="button" class="btn btn-default"><svg class="map-maker_icon" role="img" title=""><use xlink:href="{{base_url}}assets/admin/images/svgs.svg#icon-map-path"></use></svg></button>
                        <button type="button" class="btn btn-default"><svg class="map-maker_icon" role="img" title=""><use xlink:href="{{base_url}}assets/admin/images/svgs.svg#icon-map-region"></use></svg></button>
                        <button type="button" class="btn btn-default"><svg class="map-maker_icon" role="img" title=""><use xlink:href="{{base_url}}assets/admin/images/svgs.svg#icon-map-area"></use></svg></button>
                    </div>
                </div>
                <div class="map-maker_content">
                    <div class="map-maker_header">
                        <label class="map-maker_label" for="map-maker-search">Adresse</label>
                        <input class="map-maker_input form-control" id="map-maker-search" type="text">
                         <button type="button" class="map-maker_btn btn btn-primary btn-lg btn-info" data-toggle="modal" data-target="#myModal">
                            Sauvegarder
                        </button>
                    </div>
                    <div class="map-maker_map"></div>
                </div>
            </div>
        </div>
    </div>

    <aside class="c-aside o-flex_aside">
        <div class="o-container -top -right">
            <div class="c-panel -fixed">
                <header class="c-panel_header">
                    Actions
                </header>

                <div class="c-panel_main">
                    <p>
                        Attention, innondation dans le secteur de boucherville ouest
                    </p>
                    <table class="c-panel_table">
                        <tr class="c-panel_table_row">
                            <th class="c-panel_table_header">Status</th>
                            <td class="c-panel_table_data">Brouillon</td>
                        </tr>
                        <tr class="c-panel_table_row">
                            <th class="c-panel_table_header">Création</th>
                            <td class="c-panel_table_data">20.24.14  16:00</td>
                        </tr>
                        <tr class="c-panel_table_row">
                            <th class="c-panel_table_header">Révision</th>
                            <td class="c-panel_table_data">20.24.14  16:00</td>
                        </tr>
                    </table>
                    <div class="form-group">
                        <button type="button" class="btn btn-info btn-lg btn-block">Sauvegarder</button>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-danger btn-lg btn-block">Envoyer l'alerte</button>
                    </div>
                </div>

                <footer class="c-panel_footer">
                    <div class="c-panel_footer_item -red">
                        <span>
                            <i class="fa fa-trash-o"></i> Effacer
                        </span>
                    </div>
                    <div class="c-panel_footer_item -blue">
                        <span>
                            <i class="fa fa-refresh"></i> Réinitialiser
                        </span>
                    </div>
                </footer>
            </div>
        </div>
    </aside>

</div>

